<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/atlas_view_messages_cell_attachment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.layer.atlas.ShapedFrameLayout
        android:id="@+id/atlas_view_messages_cell_attachment_container_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_horizontal"
        android:background="@drawable/atlas_shape_rounded16_gray">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/atlas_view_messages_convert_text_my"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="myFile.txt"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="4dp"
                android:textSize="16sp"
                android:minHeight="34dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_file_download_white_24dp"
                />
        </LinearLayout>
        <com.layer.atlas.AtlasProgressView
            android:id="@+id/atlas_view_messages_cell_attachment_my_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.layer.atlas.ShapedFrameLayout>

    <com.layer.atlas.ShapedFrameLayout
        android:id="@+id/atlas_view_messages_cell_attachment_container_their"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_horizontal"
        android:background="@drawable/atlas_shape_rounded16_blue">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/atlas_view_messages_convert_text_their"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="myFile.txt"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="4dp"
                android:textSize="16sp"
                android:minHeight="34dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="6dp"
                android:paddingLeft="4dp"
                android:paddingRight="12dp"
                android:src="@drawable/ic_file_download_black_24dp"
                />
        </LinearLayout>
        <com.layer.atlas.AtlasProgressView
            android:id="@+id/atlas_view_messages_cell_attachment_their_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.layer.atlas.ShapedFrameLayout>

</FrameLayout>


